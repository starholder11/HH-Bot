{
  "templates": [
    {
      "name": "timeline",
      "label": "Timeline Entry",
      "fields": [
        {
          "type": "string",
          "name": "title",
          "label": "Title",
          "required": true
        },
        {
          "type": "string",
          "name": "slug",
          "label": "Slug",
          "required": true,
          "description": "URL-friendly identifier (e.g., 'first-milestone')"
        },
        {
          "type": "datetime",
          "name": "date",
          "label": "Date",
          "required": true,
          "description": "When this milestone occurred"
        },
        {
          "type": "rich-text",
          "name": "body",
          "label": "Description",
          "required": true,
          "description": "Rich text description of this timeline entry"
        }
      ]
    }
  ]
} 