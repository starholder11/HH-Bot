# =============================================================================
# HH-Bot Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# CORE API KEYS
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
FAL_KEY=your-fal-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_SESSION_TOKEN=your-aws-session-token-if-needed

# S3 Configuration
S3_BUCKET_NAME=hh-bot-images-2025-prod
MEDIA_DATA_PREFIX=media-labeling/assets/

# SQS Configuration
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/781939061434/your-queue-name

# CloudFront/CDN Configuration
CLOUDFLARE_DOMAIN=your-cloudflare-domain.com
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL (for workflow logging and conversation management)
DATABASE_URL=postgresql://username:password@localhost:5432/hhbot

# Redis (for context management and caching)
REDIS_URL=redis://localhost:6379

# LanceDB Service
LANCEDB_URL=https://your-lancedb-service-url.com
LANCEDB_API_URL=http://localhost:8000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Base URL for API calls (auto-detected in production)
PUBLIC_API_BASE_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Vercel URL (auto-set by Vercel)
VERCEL_URL=your-app.vercel.app

# Node Environment
NODE_ENV=development

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================
GITHUB_TOKEN=your-github-token-for-content-sync
GITHUB_WEBHOOK_SECRET=your-webhook-secret-for-content-sync

# Keystatic GitHub Integration
KEYSTATIC_GITHUB_CLIENT_ID=your-keystatic-github-client-id
KEYSTATIC_GITHUB_CLIENT_SECRET=your-keystatic-github-client-secret
KEYSTATIC_SECRET=your-keystatic-secret

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# FAL Models JSON URL (optional)
FAL_MODELS_JSON_URL=https://your-fal-models-catalog.json

# =============================================================================
# DEVELOPMENT/DEBUG SETTINGS
# =============================================================================
# Set to 'true' to enable debug logging
DEBUG_REDIS=false
DEBUG_LANGGRAPH=false
DEBUG_TOOLS=false
DEBUG_QUALITY=false

# Cost limits (in USD)
LLM_DAILY_HARD_LIMIT=10.0
LLM_DAILY_WARNING_LIMIT=5.0
WORKFLOW_PER_REQUEST_HARD_LIMIT=1.0
WORKFLOW_PER_REQUEST_WARNING_LIMIT=0.5
TOTAL_DAILY_HARD_LIMIT=15.0
TOTAL_DAILY_WARNING_LIMIT=7.5

# =============================================================================
# PRODUCTION AWS DEPLOYMENT OVERRIDES
# =============================================================================
# These will be set automatically in AWS deployment
# REDIS_URL=redis://your-elasticache-cluster.cache.amazonaws.com:6379
# DATABASE_URL=postgresql://username:password@your-rds-cluster.amazonaws.com:5432/hhbot
# LANCEDB_URL=https://your-ecs-alb-url.amazonaws.com
