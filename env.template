# Copy this file to .env.local and fill in your values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Next.js Configuration  
NEXT_PUBLIC_APP_URL=http://localhost:3000

# TinaCMS Configuration (Self-hosted with authentication)
TINA_PUBLIC_IS_LOCAL=false

# Required for TinaCMS authentication (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_nextauth_secret_here

# GitHub configuration (required for content management)
GITHUB_OWNER=starholder11
GITHUB_REPO=HH-Bot
GITHUB_BRANCH=main
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here

# Redis configuration (required for database)
KV_REST_API_URL=your_upstash_redis_url_here
KV_REST_API_TOKEN=your_upstash_redis_token_here

# IMPORTANT: Set these environment variables in Vercel for production deployment
# All variables above are required for the admin interface to work properly 